@model IEnumerable<DDari.Models.Delivery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0"></h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <div class="QA_section">
                            <div class="white_box_tittle list_header">
                                <h4>Deliveries</h4>
                                <div class="box_right d-flex lms_block">
                                    <div class="add_button ml-10">
                                        <a href="#" data-toggle="modal" data-target="#addcategory" id="addbtn" class="btn_1">Add New</a>
                                    </div>
                                </div>
                            </div>

                            <div class="white_card_body" id="assign" style="display:none">
                                @Html.Action("assign")
                            </div>
                            <div class="QA_table mb_30">
                                <!-- table-responsive -->
                                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper no-footer">
                                    <table class="table lms_table_active dataTable no-footer dtr-inline collapsed" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info" style="width: 968px;">
                                        <thead>
                                            <tr role="row">

                                                <th scope="col" class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 96px;" aria-sort="ascending" aria-label="title: activate to sort column descending">Date</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 140px;" aria-label="Category: activate to sort column ascending">Destination</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 133px; display: none;" aria-label="Teacher: activate to sort column ascending">Delivery Man</th>
                                                <th scope="col" class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" style="width: 132px; display: none;" aria-label="Lesson: activate to sort column ascending">State</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" class="odd">

                                                    <th scope="row" tabindex="0" class="sorting_1"> <a href="#" class="question_content">@item.date</a></th>
                                                    <td style="">@item.destination</td>
                                                    <td style="display: none;">@item.deliveryMan.firstName @item.deliveryMan.lastName</td>
                                                    <td style="display: none;"><a href="#" class="status_btn">@item.deliveryState</a></td>
                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.6.0.js"></script>

<script>

    $(document).on("click", "#addbtn", function () {
        $('#assign').toggle(500);
    });

</script>