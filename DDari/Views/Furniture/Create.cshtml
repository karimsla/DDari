@model DDari.Models.Furniture

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/dashboardCustomer.cshtml";
}





@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Sofa",
        Value = "Sofa"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Chair",
        Value = "Chair",

    }); listItems.Add(new SelectListItem
    {
        Text = "Table",
        Value = "Table",

    }); listItems.Add(new SelectListItem
    {
        Text = "Night_stand",
        Value = "Night_stand",

    }); listItems.Add(new SelectListItem
    {
        Text = "Wardrobe",
        Value = "Wardrobe",

    }); listItems.Add(new SelectListItem
    {
        Text = "Desk",
        Value = "Desk",

    }); listItems.Add(new SelectListItem
    {
        Text = "Bed",
        Value = "Bed",

    });



}

<!-- ============================ Submit Property Start ================================== -->
<div class="col-lg-9 col-md-12">
    <div class="dashboard-wraper">

        <!-- Submit Form -->
        <div class="col-lg-12 col-md-12">

            <div class="submit-page">

                @using (Html.BeginForm("Create", "Furniture", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <!-- Basic Information -->
                    <div class="form-submit">
                        <h3>Basic Information</h3>
                        <div class="submit-section">
                            <div class="row">

                                <div class="form-group col-md-12">
                                    <label>Furniture Title<span class="tip-topdata" data-tip="Furnituyr Title"><i class="ti-help"></i></span></label>
                                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                                <div class="form-group col-md-6">
                                    <label>Furniture Price<span class="tip-topdata" data-tip="Furniture Price"><i class="ti-help"></i></span></label>
                                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })

                                </div>


                                <div class="form-group col-md-6">
                                    <label>Type</label>
                                    @Html.DropDownListFor(model => model.type, listItems, "Select type", new { @class = "form-control", @id = "status" })

                                </div>




                            </div>
                        </div>
                    </div>

                    <!-- Gallery -->


                    <div class="form-submit">
                        <h3>Gallery</h3>
                        <div class="submit-section">
                            <div class="row">

                                <div class="form-group col-md-12">
                                    <div class="custom-file">
                                        <label class="custom-file-label" for="customFile">Choose Picture</label>
                                        <input type="file" class="custom-file-input" id="customFile" name="postedFile">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>



                    <!-- Detailed Information -->
                    <div class="form-submit">
                        <h3>Detailed Information</h3>
                        <div class="submit-section">
                            <div class="row">

                                <div class="form-group col-md-12">
                                    <label>Description</label>
                                    @Html.TextAreaFor(model => model.description, new { @class = "form-control" })
                                </div>




                            </div>




                        </div>
                    </div>



                    <div class="form-group col-lg-12 col-md-12">
                        <button class="btn btn-theme-light-2 rounded" type="submit">Submit & Preview</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

 
<!-- ============================ Submit Property End ================================== -->



<script src="~/Scripts/js/dropzone.js"></script>
<script src="~/Scripts/js/jquery.min.js"></script>
<script src="~/Scripts/js/popper.min.js"></script>
<script src="~/Scripts/js/bootstrap.min.js"></script>
<script src="~/Scripts/js/rangeslider.js"></script>
<script src="~/Scripts/js/select2.min.js"></script>
<script src="~/Scripts/js/jquery.magnific-popup.min.js"></script>
<script src="~/Scripts/js/slick.js"></script>
<script src="~/Scripts/js/slider-bg.js"></script>
<script src="~/Scripts/js/lightbox.js"></script>
<script src="~/Scripts/js/imagesloaded.js"></script>

<script src="~/Scripts/js/custom.js"></script>


