@model DDari.Models.Property

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Sale",
        Value = "Sale"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Rent",
        Value = "Rent",

    });
     


    List<SelectListItem> listItems1 = new List<SelectListItem>();
    listItems1.Add(new SelectListItem
    {
        Text = "House",
        Value = "House"
    }); listItems1.Add(new SelectListItem
    {
        Text = "ConstructionZone",
        Value = "ConstructionZone"
    });
    listItems1.Add(new SelectListItem
    {
        Text = "Apartment",
        Value = "Apartment",

    }); listItems1.Add(new SelectListItem
    {
        Text = "Villa",
        Value = "Villa",

    }); listItems1.Add(new SelectListItem
    {
        Text = "Shop",
        Value = "Shop",

    }); listItems1.Add(new SelectListItem
    {
        Text = "Office",
        Value = "Office",

    }); listItems1.Add(new SelectListItem
    {
        Text = "Garage",
        Value = "Garage",

    }); listItems1.Add(new SelectListItem
    {
        Text = "Collocation",
        Value = "Collocation",

    });listItems1.Add(new SelectListItem
    {
        Text = "Building",
        Value = "Building",

    });listItems1.Add(new SelectListItem
    {
        Text = "Ground",
        Value = "Ground",

    });

}

<!-- ============================ Submit Property Start ================================== -->
<section class="gray-simple">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

              

            </div>

            <!-- Submit Form -->
            <div class="col-lg-12 col-md-12">

                <div class="submit-page">

                    @using (Html.BeginForm("Create", "Property", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <!-- Basic Information -->
                        <div class="form-submit">
                            <h3>Basic Information</h3>
                            <div class="submit-section">
                                <div class="row">

                                    <div class="form-group col-md-12">
                                        <label>Property Title<span class="tip-topdata" data-tip="Property Title"><i class="ti-help"></i></span></label>
                                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>


                                    <div class="form-group col-md-6">
                                        <label>Status</label>
                                        @Html.DropDownListFor(model => model.state, listItems, "Select Status", new { @class = "form-control", @id = "status" })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Property Type</label>
                                        @Html.DropDownListFor(model => model.type, listItems1, "Select Type", new { @class = "form-control", @id = "ptypes" })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Price</label>
                                        @Html.EditorFor(model => model.prix, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Area</label>
                                        @Html.EditorFor(model => model.surface, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Built Area</label>
                                        @Html.EditorFor(model => model.superficie, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Room number</label>
                                        @Html.EditorFor(model => model.nbrooms, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>



                                </div>
                            </div>
                        </div>

                        <!-- Gallery -->
                     

                        <div class="form-submit">
                            <h3>Gallery</h3>
                            <div class="submit-section">
                                <div class="row">

                                    <div class="form-group col-md-12">
                                        <div class="custom-file">
                                            <label class="custom-file-label" for="customFile">Choose Picture</label>
                                            <input type="file" class="custom-file-input" id="customFile" name="postedFile" >
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="form-submit">
                            <h3>Location</h3>
                            <div class="submit-section">
                                <div class="row">

                                    <div class="form-group col-md-6">
                                        <label>Address</label>
                                        @Html.EditorFor(model => model.adress, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>City</label>
                                        @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>

                                    <div class="form-group col-md-6">
                                        <label>Zip Code</label>
                                        @Html.EditorFor(model => model.zipCode, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>



                                </div>
                            </div>
                        </div>

                        <!-- Detailed Information -->
                        <div class="form-submit">
                            <h3>Detailed Information</h3>
                            <div class="submit-section">
                                <div class="row">

                                    <div class="form-group col-md-12">
                                        <label>Description</label>
                                        @Html.TextAreaFor(model => model.description, new { @class = "form-control" })
                                    </div>




                                </div>




                            </div>
                        </div>



                        <div class="form-group col-lg-12 col-md-12">
                            <button class="btn btn-theme-light-2 rounded" type="submit">Submit & Preview</button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>

</section>
<!-- ============================ Submit Property End ================================== -->



