@model DDari.Models.Reclamation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

<!-- ============================ Submit Property Start ================================== -->
<section class="gray-simple">

    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <div class="alert alert-success" role="alert">
                    <p>Please, Sign In before you submit a property. If you don't have an account you can create one by <a href="#">Clicking Here</a></p>
                </div>

            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <!-- Submit Form -->
                <div class="col-lg-12 col-md-12">

                    <div class="submit-page">



                        <div class="form-submit">
                            <h3>Contact Information</h3>
                            <div class="submit-section">
                                <div class="row">

                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(model => model.type, htmlAttributes: new { @class = "control-label col-md-2" })

                                        @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
                                      
                                            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                                        </div>
                                    

                                    </div>
                            </div>
                        </div>

                        <!-- Detailed Information -->
                        <div class="form-submit">
                            <h3>Detailed Information</h3>
                            <div class="submit-section">
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.explication, htmlAttributes: new { @class = "control-label col-md-2" })

                                        @Html.TextAreaFor(model => model.explication,  new { @class = "form-control h-120"  })
                                        @Html.ValidationMessageFor(model => model.explication, "", new { @class = "text-danger" })
                                  
                                        </div>
                                    </div>
                                </div>
                        </div>

                        <!-- Contact Information -->


                        <div class="form-group col-lg-12 col-md-12">
                            <label>GDPR Agreement *</label>
                            <ul class="no-ul-list">
                                <li>
                                    <input id="aj-1" class="checkbox-custom" name="aj-1" type="checkbox">
                                    <label for="aj-1" class="checkbox-custom-label">I consent to having this website store my submitted information so they can respond to my inquiry.</label>
                                </li>
                            </ul>
                        </div>

                        <div class="form-group col-lg-12 col-md-12">
                            <button class="btn btn-theme-light-2 rounded" type="submit">Submit & Preview</button>
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>

</section>
<!-- ============================ Submit Property End ================================== -->